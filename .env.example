# Ports for application services
USER_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3002
ORDER_SERVICE_PORT=3003

# Ports for metrics sidecars
USER_METRICS_SIDECAR_PORT=9101
PRODUCT_METRICS_SIDECAR_PORT=9102
ORDER_METRICS_SIDECAR_PORT=9103

# Port for log aggregator
LOG_AGGREGATOR_PORT=8080

# URL for the mock log aggregator (used by sidecars)
LOG_AGGREGATOR_URL=http://log-aggregator:8080/logs

# Environment name for metrics and logging labels
ENVIRONMENT=development

# Logging sidecar configuration
LOG_FILE_PATH=/var/log/app/app.log
LOG_POLL_INTERVAL_MS=1000

# Metrics sidecar configuration
METRICS_SCRAPE_INTERVAL_SECONDS=15
